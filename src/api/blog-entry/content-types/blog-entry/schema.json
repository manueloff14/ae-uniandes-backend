{
  "kind": "collectionType",
  "collectionName": "blog_entries",
  "info": {
    "singularName": "blog-entry",
    "pluralName": "blog-entries",
    "displayName": "Blog-Entry"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultMarkdown"
      },
      "required": true
    },
    "authors": {
      "type": "component",
      "component": "blog-page-components.author-role",
      "repeatable": true,
      "required": true
    }
  }
}
